/////////////////////////////////////////////////////////////////////
// Self destruct if quest conditions are met
/////////////////////////////////////////////////////////////////////
IF
	GlobalGT("BaatezuHead","AC#W60",0)
THEN
	RESPONSE #100
		Kill(Myself)
END

/////////////////////////////////////////////////////////////////////
// Hate on Tanari
/////////////////////////////////////////////////////////////////////
IF
	See([0.0.0.TANARI])
THEN
	RESPONSE #100
		AttackReevaluate([0.0.0.TANARI],30)
END

/////////////////////////////////////////////////////////////////////
// Prep
/////////////////////////////////////////////////////////////////////
IF
  See([GOODCUTOFF])
  Global("Prep","LOCALS",0)
  DifficultyGT(NORMAL)
THEN
  RESPONSE #100
    SetGlobalTimer("MO_Spawn","LOCALS",10)
    ApplySpell(Myself,WIZARD_MIRROR_IMAGE)  // SPWI212.SPL (Mirror Image)
    CreateCreatureObjectEffect("AC#W60LM","SPSPEV",LastSeenBy(Myself))
    CreateCreatureObjectEffect("AC#W60LM","SPSPEV",LastSeenBy(Myself))
    CreateCreatureObjectEffect("AC#W60LM","SPSPEV",LastSeenBy(Myself))
    CreateCreatureObjectEffect("AC#W60LM","SPSPEV",LastSeenBy(Myself))
    CreateCreatureObjectEffect("AC#W60LM","SPSPEV",LastSeenBy(Myself))
    SetGlobal("Prep","LOCALS",1)
END

