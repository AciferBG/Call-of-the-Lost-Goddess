    CreateCreatureObjectEffect("AC#W60LM","SPSPEV",LastSeenBy(Myself))
    CreateCreatureObjectEffect("AC#W60LM","SPSPEV",LastSeenBy(Myself))
    CreateCreatureObjectEffect("AC#W60LM","SPSPEV",LastSeenBy(Myself))
